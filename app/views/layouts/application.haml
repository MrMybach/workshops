!!!
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }/
    %meta{ content: 'IE=Edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }/
    %meta{ content: 'width=device-width, initial-scale=1.0', name: 'viewport' }/
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'

  %body
    %nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          %span 
            = link_to "#{AppConfig.workshops_name}", root_path, class: 'navbar-brand'
        %p.navbar-text.navbar-right
          - if signed_in?
            = link_to current_user.email, edit_user_registration_path(current_user)
            |
            = link_to 'Log out', destroy_user_session_path, method: :delete
          - else
            = link_to 'Log in', new_user_session_path
            |  
            = link_to 'Sign up', new_user_registration_path
    .message-container
      -flash.each do |message_type, message|
        %div(class="alert #{ message_type_to_bootstrap_class message_type } js-fade-out-msg")
          = message
    .container-fluid
      .row
        .col-lg-8.col-lg-offset-2
          = yield
